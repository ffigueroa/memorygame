{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["plugin:import/recommended", "airbnb", "airbnb/hooks", "next", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/jsx-props-no-spreading": "off"
  },
  "settings": {
    // Setting to resolve alias path @ to src folder.
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      }
    }
  }
}
